{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}

    <div id="wrapper-category">

        <h1> Bienvenue sur le forum ! </h1>
        <h2>Catégories </h2>
        <div class="categories">
            {% for category in categories %} <br>
            <div class="category">
                <ul>
                    <li>
                        <a class="category-name" href="{{ path('show_category', {id: category.id}) }}">{{ category }}</a>
                    </li>
                </ul>
                
            
            
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn-delete-category" href="{{ path('delete_category', {'id': category.id}) }}"><i class="fa-solid fa-trash"></i></a>
            </div>
                {% endif %}  
                <br>
            {% endfor %}
        </div>


        {% if is_granted('ROLE_ADMIN')  %}
            <div class="form-category">
                <p>Ajouter une catégorie :</p>
                {{ form(formCategory)}}
            </div>
        {% endif %}
    </div>

{% endblock %}
