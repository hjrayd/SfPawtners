{% extends 'base.html.twig' %}

{% block title %}Ajouter un chat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- On charge le CSS de Select2Ã  l'aide d'une librairie CDN-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
<div id="wrapper-add-cat">
    <div class="form-cat">
        {% if app.user.ban %}
            Vous ne pouvez pas ajouter de profils.
        {% else %}
            <h1>Ajouter le profil de votre chat !</h1>
            {{ form_start(formAddCat) }}
            <div class="formCat-rows">
                {{ form_row(formAddCat.name) }}
                {{ form_row(formAddCat.gender) }}
            </div>
            {{ form_row(formAddCat.dateBirth) }}
            
            <div class="formCat-rows">
                {{ form_row(formAddCat.description) }}
                {{ form_row(formAddCat.city) }}
            </div>
            <div class="formCat-rows">
                {{ form_row(formAddCat.litter) }}
                {{ form_row(formAddCat.vaccinated) }}
            </div>
            <div class="formCat-rows">
                {{ form_row(formAddCat.breeds) }}
                {{ form_row(formAddCat.coats) }}
            </div>
            <div class="add-cat-img">
                {{ form_row(formAddCat.images) }}
            </div>

            {{ form_row(formAddCat.Valider) }} 

            {{ form_end(formAddCat) }}

        {% endif %}  
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Permet d'inclure et de charger la librairie JQuery depuis un CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Permet d'inclure et de charger la librairie Select2 depuis un CDN -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Notre fichier JS qui contient le script-->
    <script src="{{ asset('js/select2.js') }}"></script>
{% endblock %}

