{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div id="wrapper-user">

        {%  if app.user == user %}
            <h1 >Votre profil </h1>
        {% else %}
            <h1> Profil de {{user}}</h1>
        {% endif %}

   
        {% if user.avatar %} {# Si le user a un avatar ALORS on l'affiche sinon bug #}
            <img src="{{ asset(user.avatar) }}" class="user-avatar" >
        {% endif %}
    
        
        <h2> @{{ user }}</h2>

        <h3>   Mes chats <i id="arrow" class="fa-solid fa-caret-down"></i> </h3> <br>
        <div id="cats-user" class="cats-user">
            {% for cat in user.cats %}
                
                    <div class="cat-user">

                        {# First = filtre qui permet de récupèrer le premier élément d'un tableau #}
                        {% set firstImage = cat.images|first %}
                            <img src="{{ asset(firstImage) }}" alt="{{ firstImage.imageAlt }}">
                             <a href="{{path("show_cat", {id:cat.id}) }}"> {{cat}} </a>
                    </div>
                
            {% endfor %}
        </div>

            <h3> Avis <i id="arrow" class="fa-solid fa-caret-down"></i> </h3>

            <div class="reviews">
                {% if reviews %}
                    {% for review in reviews %}
                        <div class="review">
                            {% if review.reviewer %}
                                {{ review.reviewer }}
                            {% else %}
                                Utilisateur supprimé
                            {% endif %} 
                            <p>{{ review.reviewContent }}</p>
                            <p>{{ review.reviewRating }}/5</p>
                            
                            {% if app.user == review.reviewer or is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('delete_review', {'id': review.id}) }}">Supprimer</a>
                            {% endif %}
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucun avis pour le moment.</p>
                {% endif %}
            </div>
            
            
            {% if app.user.ban %}
                Vous ne pouvez pas ajouter d'avis
            {% else %}
            {% if canPostReview %}
                <h2>Dîtes à {{user}} ce que vous en avez pensé !</h2>
                {{ form_start(formReview) }}
                    {{ form_widget(formReview) }}
                    <button type="submit">Envoyer</button>
                {{ form_end(formReview) }}
            {% endif %}
            {% endif %}


            {%  if app.user == user %}

                <div class="btn-user-match">
                    <a href="{{ path('app_like')}}">Mes likes</a>
                    <a href="{{ path('app_matche')}}">Mes match</a>
                </div>
                   
                <h3> Avis postés <i id="arrow" class="fa-solid fa-caret-down"></i> </h3>
                    <button> 
                        <a href="{{ path('update_user') }}">Changer mes informations</a> 
                    </button>
                    
            {% endif %}
        </div>

{% endblock %}
